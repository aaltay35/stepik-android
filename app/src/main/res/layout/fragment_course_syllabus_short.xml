<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/reportConnectionProblemSections"
        layout="@layout/report_problem_layout"/>

    <include
        android:id="@+id/reportEmptySections"
        layout="@layout/report_empty_layout"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/courseSyllabusRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@color/transparent"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay"
        android:splitMotionEvents="false"/>

    <include
        android:id="@+id/progressBarSections"
        layout="@layout/progress_bar_on_empty_screen"/>
</FrameLayout>